<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingStart="@dimen/default_padding"
              android:paddingEnd="@dimen/default_padding">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/forecast_item_height">

        <TextView
                android:id="@+id/dayLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/temperatureLabel"
                android:layout_centerVertical="true"
                android:gravity="start"
                android:layout_alignParentStart="true"
                android:textColor="@color/temp_color"
                android:textSize="@dimen/text_size"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/temperatureLabel"/>

        <TextView
                android:id="@+id/temperatureLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:textColor="@color/temp_color"
                android:textSize="@dimen/text_size"
                android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_indicator_height"
            android:background="@color/line_indicator_color"/>

</LinearLayout>